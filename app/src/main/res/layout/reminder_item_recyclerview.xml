<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="15dp"

    android:background="@drawable/recycler_item_arc"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="15dp"
        android:id="@+id/ivPill"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/pill_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMedicineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Aspirin"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivPill"
        app:layout_constraintTop_toTopOf="@id/ivPill" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="09:30"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivPill"
        app:layout_constraintTop_toBottomOf="@id/tvMedicineName" />

<!--    <androidx.appcompat.widget.AppCompatButton-->
